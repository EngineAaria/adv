<script>
function analyzeNotice() {
  const type = document.getElementById("noticeType").value;
  const reason = document.getElementById("reason").value;
  const due = document.getElementById("dueDate").value;
  const resultBox = document.getElementById("result");

  if (!type || !reason || !due) {
    alert("Please fill required details.");
    return;
  }

  let message = "";

  if (reason === "return-mismatch" || reason === "itc") {
    message = `
      <h3 class="flag">Important â€” Needs Careful Review</h3>
      <p>
        This type of notice usually requires document reconciliation
        and a properly drafted reply.
      </p>
      <p>
        Avoid casual or delayed responses. Early structured reply is critical.
      </p>
    `;
  } else {
    message = `
      <h3 class="safe">Manageable Notice</h3>
      <p>
        Based on initial information, this notice appears manageable.
        Timely and clear reply should resolve the matter.
      </p>
    `;
  }

  message += `
    <p><strong>Next Recommended Steps:</strong></p>
    <ul>
      <li>Collect relevant documents</li>
      <li>Review past returns and filings</li>
      <li>Draft reply before due date</li>
    </ul>
  `;

  resultBox.innerHTML = message;
  resultBox.style.display = "block";
}
</script>

